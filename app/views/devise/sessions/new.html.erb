<script>
$(document).ready(function() {

  function toggleSidebar() {
    $(".button").toggleClass("active");
    $("main").toggleClass("move-to-left");
    $(".sidebar-item").toggleClass("active");
  }

  $(".button").on("click tap", function() {
    toggleSidebar();
  });

  $(document).keyup(function(e) {
    if (e.keyCode === 27) {
      toggleSidebar();
    }
  });

});
</script>
<main>


  <nav>
    <div class="nav-right hidden-xs">
      <div class="button" id="btn">
        <div class="bar top"></div>
        <div class="bar middle"></div>
        <div class="bar bottom"></div>
      </div>
    </div>
    <!-- nav-right -->
  </nav>
  
  
<div class="container">
<div class="contentwrap">
  <article class="container">
  <div class="ppage-header">
    <h2 class="col-sm-6 ">로그인</h2><br><br>
    <hr class="linee">
  </div>
   <div class="form-horizontal offset-3">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                
              
                <div class="form-group">
                  <label for="inputEmail" class="col-sm-2 control-label" style="text-align: left;">이메일</label>
                  <div class="col-sm-6">
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  </div>
                </div>
                
                <div class="form-group">
                  <label for="inputPassword" class="col-sm-2 control-label" style="text-align: left;">비밀번호</label>
                  <div class="col-sm-6">
                     <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                  </div>
                </div>
                
                <div class="form-group">
                  <label for="inputName" class="col-sm-2 control-label"></label>
                    <div class="col-sm-6">
                        <% if devise_mapping.rememberable? -%>
                    <div class="form-input">
                        <%= f.check_box :remember_me %>
                        <%= f.label :기억하기 %>
                    </div>
                        <% end -%>
                    </div>
                </div>
    
                 <div class="form-group">
                  <label for="inputName" class="col-sm-2 control-label"></label>
                    <div class="col-sm-6">
                      <button type="submit" class="btn btn-primary">로그인</button>
                    </div>
                 </div>
    
    
    
              <% end %>
    
        <%#    <%= render "devise/shared/links" %>
    </div>

</div>
