<div class="container mt-3">
  
  <form action="/main/haveroom">
    <input type="text" name="search">
    <input type="submit" value="제출">
  </form>
  
  <% @search.each do |p| %>
    <%= @user.where(:id => p.user_id).take.name %>
    <%= @user.where(:id => p.user_id).take.gender %>
    <%= p.aa %>
    <%= p.school_name %>
    <%= p.created_at.strftime("%Y-%m-%d") %>
  <% end %>
  
</div>